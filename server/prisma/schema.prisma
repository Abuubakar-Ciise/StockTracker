generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  email String
  username String
  name String? @unique
  image String?
  googleId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relations
  products Products[]
}

model Products {
  id  String @id @default(cuid())
  name String
  description String
  price Float
  image String?
  quantity    Int @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relations
  userId String
  user User @relation(fields: [userId],references: [id])
}
